-- lib.section: Properties

-- lib.code: Properties
icon: brackets-curly

\-- lib.page: 
\;; Heading of the page
caption captionTitle:
optional string title:
\;; Optional html title of the page, defaults to the caption
optional ftd.image-src image:
\;; Derived from common
ftd.image-src site-logo: $common.site-logo 
string site-url: $common.site-url
string site-name: $common.site-name
\;; The children passed to the page
children wrapper:
\;; Whether to show the sidebar
boolean sidebar: true
\;; Whether to show the breadcrumb
boolean breadcrumb: true


